{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es2015", "dom" ],
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "aot"
    },
    "files": [
      "app/app.module.ts",
      "app/main.ts",
      "typings.d.ts"
    ],
    "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit" : true
    },
    "exclude": [
      "node_modules",
      "compiled"
    ]
  }
  